<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn1"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:text="뒤로 가기"
            android:textColor="#000000"
            android:textSize="18sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="540dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:weightSum="3"
            android:layout_marginStart="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/t1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="상추"
                    android:textColor="#000000"
                    android:textSize="72sp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="20dp"/>

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/image1"/>


            </LinearLayout>

            <TextView
                android:id="@+id/t2"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:text="이 식물은 언제 언제 물을 주는 것이 가장 적당합니다."
                android:textColor="#000000"
                android:textSize="36sp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/btn2"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@drawable/rounded_solid_button"
                android:text="물 주기"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="540dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:weightSum="3"
            android:layout_marginStart="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/t3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="상추"
                    android:textColor="#000000"
                    android:textSize="72sp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="20dp"/>

                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/image1"/>


            </LinearLayout>

            <TextView
                android:id="@+id/t4"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:text="이 식물은 언제 언제 물을 주는 것이 가장 적당합니다."
                android:textColor="#000000"
                android:textSize="36sp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/btn3"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@drawable/rounded_solid_button"
                android:text="물 주기"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="540dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:weightSum="3"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/t5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="상추"
                    android:textColor="#000000"
                    android:textSize="72sp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="20dp"/>

                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/image1"/>


            </LinearLayout>

            <TextView
                android:id="@+id/t6"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:text="이 식물은 언제 언제 물을 주는 것이 가장 적당합니다."
                android:textColor="#000000"
                android:textSize="36sp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/btn4"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@drawable/rounded_solid_button"
                android:text="물 주기"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>